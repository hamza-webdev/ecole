    <h1>Eleve</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ eleve.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ eleve.name }}</td>
            </tr>
            <tr>
