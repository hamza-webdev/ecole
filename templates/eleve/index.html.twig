    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Prenom</th>
                <th>DateNaissance</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
