                <td>{{ eleve.prenom }}</td>
                <td>{{ eleve.dateNaissance ? eleve.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ eleve.email }}</td>
                <td>{{ eleve.telephone }}</td>
                <td>
