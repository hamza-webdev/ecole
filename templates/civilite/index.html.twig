    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for civilite in civilites %}
            <tr>
                <td>{{ civilite.id }}</td>
                <td>{{ civilite.title }}</td>
                <td>
                    <a href="{{ path('civilite_show', {'id': civilite.id}) }}">show</a>
